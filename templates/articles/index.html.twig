{% extends 'base.html.twig' %}

{% block title %}Symfony articles app{% endblock %}

{% block body %}
<h1>Articles</h1>
<table id="table" class"table table-striped">
    <thead>
        <tr>
        <th>Article Title</th>
        <th>Article Body</th>
        </tr>
    </thead>
    <tbody>
        {% for article in articles %}
        <tr>
        <td>{{article.title}}</td>
        <td><a href="article/{{article.id}}" class="btn btn-dark">Show</a></td>
        <td><a href="article/update/{{article.id}}" class="btn btn-light">Edit</a></td>
        <td><a href=# class="btn btn-danger delete-article" data-id="{{article.id}}">Delete</a></td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}


{% block javascripts %}
<script src="http://localhost/symart/public/js/main.js" ></script>
{% endblock %}
